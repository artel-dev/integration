<odoo>
    <data>
        <record id="action_section_wizard" model="ir.actions.act_window">
            <field name="name">Section Wizard</field>
            <field name="res_model">gsheet.timesheet.section.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="gsheet_timesheet_section_wizard_form" model="ir.ui.view">
            <field name="name">gsheet.timesheet.section.wizard.form</field>
            <field name="model">gsheet.timesheet.section.wizard</field>
            <field name="arch" type="xml">
                <form string="Section Wizard">
                    <div>
                        <field name="message" readonly="1"/>
                    </div>
                    <footer>
                        <button string="Confirm" name="create_or_select_record" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
