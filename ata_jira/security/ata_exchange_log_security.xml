<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ata_jira_exchange_log_rule_user" model="ir.rule">
        <field name="name">User can see only today</field>
        <field name="model_id" ref="model_ata_exchange_log"/>
        <field name="groups" eval="[(4, ref('ata_jira.ata_jira_group_user'))]"/>
        <field name="domain_force">[('day_delta', '=', 0)]</field>
    </record>

    <record id="ata_jira_exchange_log_rule_admin" model="ir.rule">
        <field name="name">Admin can see all days</field>
        <field name="model_id" ref="model_ata_exchange_log"/>
        <field name="groups" eval="[(4, ref('ata_jira.ata_jira_group_administrator'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="ata_jira_external_system_user_rule_user" model="ir.rule">
        <field name="name">User can edit his own record</field>
        <field name="model_id" ref="model_ata_external_system_user"/>
        <field name="groups" eval="[(4, ref('ata_jira.ata_jira_group_user'))]"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="ata_jira_external_system_user_rule_admin" model="ir.rule">
        <field name="name">Admin can edit any record</field>
        <field name="model_id" ref="model_ata_external_system_user"/>
        <field name="groups" eval="[(4, ref('ata_jira.ata_jira_group_administrator'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
