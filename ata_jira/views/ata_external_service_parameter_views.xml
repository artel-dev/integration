<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ata_jira_external_service_parameter_view_form" model="ir.ui.view">
        <field name="name">External service parameter form view</field>
        <field name="model">ata.external.service.parameter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="service_id"/>
                        <field name="name"/>
                        <field name="value"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ata_jira_external_service_parameter_view_tree" model="ir.ui.view">
        <field name="name">External service parameter list view</field>
        <field name="model">ata.external.service.parameter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="service_id"/>
                <field name="name"/>
                <field name="value"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="ata_jira_external_service_parameter_view_search" model="ir.ui.view">
        <field name="name">External service parameter search view</field>
        <field name="model">ata.external.service.parameter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="service_id"/>
                <field name="value"/>
                <group>
                    <filter name="groupby_service_id" context="{'group_by': 'service_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ata_jira_external_service_parameter_action" model="ir.actions.act_window">
        <field name="name">External service parameter</field>
        <field name="res_model">ata.external.service.parameter</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="ata_jira_external_service_parameter_menu"
            name="External service parameter"
            parent="ata_jira_menu_config"
            action="ata_jira_external_service_parameter_action"
            sequence="40"
    />

</odoo>
