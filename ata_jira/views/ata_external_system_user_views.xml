<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ata_jira_external_system_user_view_form" model="ir.ui.view">
        <field name="name">External system user form view</field>
        <field name="model">ata.external.system.user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="system_id"/>
                        <field name="user_id"/>
                        <field name="login"/>
                        <field name="password" password="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ata_jira_external_system_user_view_tree" model="ir.ui.view">
        <field name="name">External system user list view</field>
        <field name="model">ata.external.system.user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="system_id"/>
                <field name="user_id"/>
                <field name="login"/>
            </tree>
        </field>
    </record>

    <record id="ata_jira_external_system_user_view_search" model="ir.ui.view">
        <field name="name">External system user search view</field>
        <field name="model">ata.external.system.user</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="system_id"/>
                <field name="user_id"/>
                <field name="login"/>
                <group>
                    <filter name="groupby_system_id" context="{'group_by': 'system_id'}"/>
                    <filter name="groupby_user_id" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ata_jira_external_system_user_action" model="ir.actions.act_window">
        <field name="name">External system user</field>
        <field name="res_model">ata.external.system.user</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="ata_jira_external_system_user_menu"
            name="External system user"
            parent="ata_jira_menu_config"
            action="ata_jira_external_system_user_action"
            sequence="20"
    />

</odoo>
