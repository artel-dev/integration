<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ata_jira_task_report_view_pivot" model="ir.ui.view">
        <field name="name">Task report view pivot</field>
        <field name="model">ata.task.report</field>
        <field name="arch" type="xml">
            <pivot display_quantity="1" sample="1">
                <field name="user_id" type="row"/>
                <field name="task_id" type="row"/>
                <field name="timesheet_date" interval="day" type="col"/>
                <field name="worked_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="ata_jira_task_report_view_graph" model="ir.ui.view">
        <field name="name">Task report view graph</field>
        <field name="model">ata.task.report</field>
        <field name="arch" type="xml">
            <graph>
                <field name="user_id"/>
                <field name="task_id"/>
                <field name="worked_hours" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="ata_jira_task_report_view_search" model="ir.ui.view">
        <field name="name">Task report view search</field>
        <field name="model">ata.task.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="external_task_key"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="user_id"/>
                <field name="kanban_state"/>
                <separator/>
                <filter name="filter_timesheet_date"
                        string="Period"
                        date="timesheet_date"
                        default_period="this_month"
                />
                <group>
                    <filter name="groupby_project" string="Project" context="{'group_by': 'project_id'}"/>
                    <filter name="groupby_task" string="Task" context="{'group_by': 'task_id'}"/>
                    <filter name="groupby_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="groupby_status" string="Status" context="{'group_by': 'kanban_state'}"/>
                    <filter name="groupby_date" string="Date" context="{'group_by': 'timesheet_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ata_jira_task_report_action" model="ir.actions.act_window">
        <field name="name">Task report (timesheet)</field>
        <field name="res_model">ata.task.report</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="ata_jira.ata_jira_task_report_view_search"/>
        <field name="context">{'search_default_filter_timesheet_date': 1}</field>
    </record>

    <menuitem
            id="ata_jira_task_report_menu"
            name="Task report"
            parent="ata_jira_menu_report"
            action="ata_jira.ata_jira_task_report_action"
            sequence="20"
    />

</odoo>
