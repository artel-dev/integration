<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ata_exchange_log_view_form" model="ir.ui.view">
        <field name="name">Exchange log form view</field>
        <field name="model">ata.exchange.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <notebook>
                        <page string="General">
                            <group>
                                <field name="name"/>
                                <field name="server_address"/>
                                <field name="server_port"/>
                                <field name="method_name"/>
                                <field name="parameters"/>
                                <field name="request_body"/>
                                <field name="request"/>
                                <field name="headers"/>
                                <field name="status_code"/>
                                <field name="create_date"/>
                                <field name="is_executed"/>
                                <field name="execution_date"/>
                                <field name="is_processed"/>
                                <field name="processing_date"/>
                                <field name="number_of_attempts"/>
                                <field name="start_date"/>
                                <field name="finish_date"/>
                                <field name="execution_time"/>
                            </group>
                        </page>
                        <page string="Response">
                            <field name="response"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ata_exchange_log_view_tree" model="ir.ui.view">
        <field name="name">Exchange log list view</field>
        <field name="model">ata.exchange.log</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="action_delete_all" string="Delete all"
                            type="object" confirm="Do you want to delete all entries from the exchange log?"/>
                </header>
                <field name="name"/>
                <field name="server_address"/>
                <field name="server_port"/>
                <field name="method_name"/>
                <field name="parameters" optional="show"/>
                <field name="request" optional="hide"/>
                <field name="response" optional="hide"/>
                <field name="headers" optional="hide"/>
                <field name="status_code"/>
                <field name="create_date" optional="hide"/>
                <field name="is_executed" optional="hide"/>
                <field name="execution_date" optional="hide"/>
                <field name="is_processed" optional="hide"/>
                <field name="processing_date" optional="hide"/>
                <field name="number_of_attempts" optional="hide"/>
                <field name="start_date" optional="show"/>
                <field name="finish_date" optional="hide"/>
                <field name="execution_time"/>
                <field name="day_delta" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="ata_exchange_log_view_kanban" model="ir.ui.view">
        <field name="name">Exchange log kanban view</field>
        <field name="model">ata.exchange.log</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="status_code">
                <field name="name"/>
                <field name="exchange_id"/>
                <field name="status_code"/>
                <field name="start_date"/>
                <field name="execution_time"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_exchange_log_kanban #{!selection_mode ? kanban_color(record.color.raw_value) : ''}">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn" role="button"
                                   data-toggle="dropdown"
                                   href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v" aria-hidden="true"/>
                                </a>
                                <div class="o_kanban_card_manage_setting row mt16">
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable">
                                            <a class="dropdown-item" role="menuitem" type="edit">
                                                Edit
                                            </a>
                                        </t>
                                        <t t-if="widget.deletable">
                                            <a class="dropdown-item" role="menuitem" type="delete">
                                                Delete
                                            </a>
                                        </t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <ul>
                                    <li>Exchange: <field name="exchange_id"/></li>
                                    <li>Start date: <field name="start_date"/></li>
                                    <li>Execution time: <field name="execution_time"/></li>
                                    <li>Status code: <field name="status_code"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ata_exchange_log_view_search" model="ir.ui.view">
        <field name="name">Exchange log search view</field>
        <field name="model">ata.exchange.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="method_name"/>
                <field name="headers"/>
                <field name="status_code"/>
                <field name="execution_time"/>
                <filter name="start_date" date="start_date"/>
                <filter name="finish_date" date="finish_date"/>
                <filter name="filter_status_code_200" string="Status: OK"
                        domain="[('status_code', '=', 200)]"/>
                <filter name="filter_status_code_error" string="Status: Error"
                        domain="[('status_code', '&gt;', 0), ('status_code', '!=', 200)]"/>
                <group>
                    <filter name="groupby_method_name" context="{'group_by': 'method_name'}"/>
                    <filter name="groupby_status_code" context="{'group_by': 'status_code'}"/>
                    <filter name="groupby_start_date" context="{'group_by': 'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ata_exchange_log_action" model="ir.actions.act_window">
        <field name="name">Exchange log</field>
        <field name="res_model">ata.exchange.log</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem
            id="ata_exchange_log_menu"
            name="Exchange log"
            parent="ata_integration_menu_external_connection_general"
            action="ata_exchange_log_action"
            sequence="10"
    />

</odoo>