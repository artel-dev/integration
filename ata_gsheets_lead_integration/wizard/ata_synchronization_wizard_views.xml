<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="lead_sync_gsheet_wizard_form" model="ir.ui.view">
            <field name="name">gsheet.lead.sync.wizard.form</field>
            <field name="model">gsheet.lead.sync.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="ata_date_form"/>
                        <field name="ata_date_to"/>
                        <field name="ata_type"/>
                    </group>
                    <footer>
                        <button string="Sync" name="google_lead_sync" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="lead_sync_gsheet_wizard_action" model="ir.actions.act_window">
            <field name="name">Sync lead with Google sheet</field>
            <field name="res_model">gsheet.lead.sync.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
